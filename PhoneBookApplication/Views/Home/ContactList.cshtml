<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Contact List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f0f0f0;
            margin: 20px;
        }

        .contact-card {
            background: white;
            border: 1px solid #ccc;
            margin-bottom: 15px;
            padding: 10px;
        }

        .phone-entry {
            margin-left: 20px;
            margin-top: 5px;
        }

        h2 {
            margin: 0;
        }

        .btn {
            padding: 5px 10px;
            background-color: #d9534f;
            color: white;
            border: none;
            margin-right: 5px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #c9302c;
            }

        .top-buttons {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="top-buttons">
        <button class="btn" onclick="window.location.href='/Contact/AddContact'">Add Contact</button>
        <button class="btn" onclick="window.location.href='/Home/Dashboard'">Back</button>
    </div>
    
    @foreach (var item in Model)
    {
        <div class="contact-card">
            <h2>@item.contact.Name</h2>
            <p><strong>Email:</strong> @item.contact.Email</p>
            <p><strong>Group:</strong> @item.contact.Groups</p>
            <p><strong>Address:</strong> @item.contact.Address</p>

            <div>
                <strong>Phone Numbers:</strong>
                @foreach (var phone in item.phones)
                {
                    <div class="phone-entry">
                        <p>@phone.Number - @phone.SimCompany - @phone.Category</p>
                        <button class="btn btn-sm btn-success" onclick="window.location.href='/Home/Edit'">Edit Number</button>
                        <button class="btn btn-sm btn-success me-2" onclick="window.location.href='/Contact/DeletePhone/@phone.id'">Delete Number</button>

                    </div>
                }
            </div>
            <div style="margin-top:10px;">
                <button class="btn btn-sm btn-success me-2" onclick="window.location.href='/Contact/AddContact'">Add Number</button>
                <button class="btn btn-sm btn-success me-2" onclick="window.location.href='/Contact/EditContact'">Edit Contact</button>
                <button class="btn btn-sm btn-success me-2" onclick="window.location.href='/Contact/DeleteContact/@item.contact.id'">Delete Contact</button>
            </div>
        </div>
    }
</body>
</html>
