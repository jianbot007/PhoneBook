
<h2>Edit Contact</h2>
@if (TempData["msg"] != null)
{
    <div class="alert alert-danger">
        @TempData["msg"]
    </div>
}
<form method="post" action="/Contact/EditContact">
    <input type="hidden" name="id" value="@Model.id" />
    <input type="hidden" name="user_id" value="@Model.user_id" />

    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
    </div>

    <div class="mb-3">
        <label for="Groups" class="form-label">Group</label>
        <select class="form-select" id="Groups" name="Groups">
            <option value="Family">Family</option>
            <option value="Friend">Friend</option>
            <option value="Office">Office</option>
            <option value="Random">Random</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="Address" class="form-label">Address</label>
        <textarea class="form-control" id="Address" name="Address" rows="3">@Model.Address</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
